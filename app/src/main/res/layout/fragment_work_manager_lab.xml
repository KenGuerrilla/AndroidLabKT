<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workManagerLab.WorkManagerLabFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/mTaskStartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="執行週期性工作"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@id/mTaskCheckBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/mTaskCheckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="執行線性一次性工作"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mTaskStartBtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>